<Window x:Class="UI.Windows.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:UI.Windows"
        mc:Ignorable="d"
        Title="ClientWindow" Height="327" Width="229">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" x:Name="textbox_InputIpServer"/>
        <Label Content="Digite o IP do seu amigo:" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.265,-1.022" Width="149" x:Name="label_StatulConnection"/>
        <Button Content="Conectar" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" x:Name="button_ClientConnect" Click="Button_ClientConnect_Click"/>
        <Slider HorizontalAlignment="Center" Margin="0,224,0,0" VerticalAlignment="Top" Width="120" SmallChange="1" Maximum="1000" Minimum="50" IsDirectionReversed="True" IsEnabled="False" ValueChanged="slider_ValueChanged" x:Name="slider_FPS"/>
        <Label Content="Frames por segundo: 20" HorizontalAlignment="Center" Margin="0,193,0,0" VerticalAlignment="Top" x:Name="label_FPS"/>
    </Grid>
</Window>
